<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/women1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/white_background"
        android:padding="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#e98c6b"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Reg_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/orange_button"
                android:ems="10"
                android:hint="Enter here"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="#333A4D"
                android:textColorHint="#ffff"
                android:textSize="16sp"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textColor="#e98c6b"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Reg_textEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/orange_button"
                android:ems="10"
                android:hint="Enter here"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#333A4D"

                android:textColorHint="#ffff"
                android:textSize="16sp"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textColor="#e98c6b"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Reg_textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/orange_button"
                android:ems="10"
                android:hint="Enter here"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#333A4D"
                android:textColorHint="#ffff"
                android:textSize="16sp"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirm Password"
                android:textColor="#e98c6b"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Reg_confirmPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/orange_button"
                android:ems="10"
                android:hint="Enter here"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#333A4D"
                android:textColorHint="#ffff"
                android:textSize="16sp"
                app:passwordToggleEnabled="true" />

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="#333A4D"
                android:layout_marginTop="20dp"
                android:progressTint="#273139"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnSingup"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/dark_button"
                android:text="Singup"
                android:textColor="#ffff"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>