<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductFragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/back_btn"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />

        <ImageView
            android:id="@+id/color1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:elevation="20dp"
            android:background="@drawable/ic_baseline_circle_24"
            android:textColor="@color/dark_green"
            android:layout_below="@id/back_btn"
            />
        <ImageView
            android:id="@+id/color2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:elevation="20dp"
            android:background="@drawable/oval_gradiant3"
            android:textColor="@color/dark_green"
            android:layout_below="@id/color1"
            />
        <ImageView
            android:id="@+id/color3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:elevation="20dp"
            android:background="@drawable/white_background"
            android:textColor="@color/dark_green"
            android:layout_below="@id/color2"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="-50dp"
            android:clipToPadding="false"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/viewer_bg"
                android:elevation="20dp" />

        </androidx.cardview.widget.CardView>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more"/>

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dots_nav"
            app:dotsColor="@color/white"
            app:dotsSpacing="4dp"
            app:dotsSize="14dp"
            app:dotsCornerRadius="8dp"
            app:dotsStrokeWidth="2dp"
            app:dotsStrokeColor="#717574"
            android:layout_above="@+id/size"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            />
        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Label"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/price"
            android:layout_below="@+id/color3"

            />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 DH"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cardView"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                />

        <TextView
            android:id="@+id/description"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-90dp"
            android:layout_toStartOf="@+id/cardView"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="djhdkvdnvdknvdknffvdfkkcslcsldcjdkjefkvj"

            android:textColor="#636262"
            android:textSize="17sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/size"
            android:textSize="25sp"
            android:text="S/XS/L"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/price"
            android:textColor="@color/black"
            android:layout_below="@+id/cardView"

            />
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/size"
            >
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/buy"
                android:text="Buy Now"
                android:textColor="@color/white"
                android:textSize="17sp"

                android:background="@drawable/bg_btn"

               />
        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>