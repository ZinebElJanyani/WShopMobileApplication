<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:src="@drawable/rectangle_gradiant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="72dp"
            android:layout_height="82dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/tringle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="92dp"
            android:layout_height="123dp"
            android:layout_marginEnd="368dp"
            android:layout_marginBottom="112dp"
            android:src="@drawable/oval_gradiant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></ImageView>

        <ImageView
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_marginStart="324dp"
            android:layout_marginTop="544dp"
            android:src="@drawable/oval_gradiant2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_marginStart="255dp"
            android:src="@drawable/oval_gradiant3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"></ImageView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="40dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView11">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textuserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="Username"
                    android:fontFamily="cursive"
                    android:textColor="@color/mainColor"
                    android:textSize="30dp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnEditPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/oval_gradiant3"
                    android:onClick="chooseFile"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_edit_24">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="16dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_person_24" />

                    <EditText
                        android:id="@+id/edit_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:textColor="#2E423E"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="16dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_email_24" />

                    <EditText
                        android:id="@+id/edit_userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:enabled="false"
                        android:inputType="textWebEmailAddress"
                        android:textColor="#2E423E"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="16dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_phone_24" />

                    <EditText
                        android:id="@+id/edit_userphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone"
                        android:enabled="false"
                        android:inputType="phone"
                        android:textColor="#2E423E"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="16dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_face_24" />

                    <EditText
                        android:id="@+id/edit_userAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:enabled="false"
                        android:inputType="textShortMessage"
                        android:textColor="#2E423E"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="2dp"

            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:layout_editor_absoluteX="-16dp">

            <Button
                android:id="@+id/savebtn"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/orange_button"
                android:visibility="gone"/>
            <Button
                android:id="@+id/editbtn"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/orange_button"
                android:visibility="visible"/>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/oval_gradiant3"
            android:elevation="5dp"
            android:onClick="chooseFile"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/profile1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </de.hdodenhof.circleimageview.CircleImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
